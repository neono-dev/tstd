{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": ["dist", "src/TaggedError.ts"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "bracketSpacing": true,
        "lineEnding": "lf",
        "lineWidth": 90,
        "indentWidth": 2,
        "attributePosition": "auto",
        "formatWithErrors": true,
        "useEditorconfig": true
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true
        }
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "enabled": true,
            "quoteStyle": "double"
        },
        "linter": {
            "enabled": true
        }
    }
}
